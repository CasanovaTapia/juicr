.container.text-center
  %h1 Join a project
  = link_to 'Post your Ask', new_ask_path
.container#ask-index
  - @asks.each do |ask|
    .row
      .col-md-2
        = "#{time_ago_in_words(ask.created_at)} ago"
      .col-md-6
        = link_to ask.project_name, ask
      .col-md-2
        = ask.category.name
      .col-md-2
        = link_to 'Edit', edit_ask_path(ask)
        = link_to 'Destroy', ask, :method => :delete, :data => { :confirm => 'Are you sure?' }
