<div class="container">
  <h1 class="text-center brand-small">giver profile.</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="col-md-3 col-md-offset-2">
        <div class="form-group">
          <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :new_password %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "leave blank you're not changing it" %>
        </div>

        <div class="form-group">
          <%= f.label :new_password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "re-enter your new password" %>
        </div>
      </div>

      <div class="col-md-4 col-md-offset-1">
        <div class="form-group">
          <%= f.label :status %><br />
          <%= f.text_field :status, autofocus: true, class: 'form-control', placeholder: 'Your current professional status or role' %>
        </div>

        <div class="form-group">
          <%= f.label :location %><br />
          <%= f.text_field :location, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :skills %><br />
          <%= f.text_area :skill, autofocus: true, class: 'form-control', rows: 4, placeholder: "Describe talents, services, and skills you can offer. What sets you apart from others?" %>
        </div>

        <div class="form-group">
          <%= f.label :achievements %><br />
          <%= f.text_area :achievement, autofocus: true, class: 'form-control', rows: 6, placeholder: "Give specific examples of when you've succeeded." %>
        </div>

        <div class="form-group">
          <%= f.label :portfolio %><br />
          <%= f.text_field :portfolio, autofocus: true, class: 'form-control', placeholder: "link to your portfolio site or Linked In profile" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">

        <div class="actions">
          <%= f.submit "Update", class: 'btn btn-success' %>
          <%= link_to "Cancel account", cancel_user_registration_path %>
        </div>
      </div>
    </div>
  <% end %>
</div>
