<div class="container">
  <div class="row text-center">
    <h1>Sign up</h1>
    <%= link_to "Log in with Facebook", user_omniauth_authorize_path(:facebook), class: 'btn btn-primary btn-lg btn-facebook' %>
    <p class="small">--- or sign up with email ---</p>
  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="col-md-3 col-md-offset-2">
        <div class="form-group">
          <!-- <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, class: 'form-control' %>
        </div> -->

        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-1">
        <div class="form-group">
          <%= f.label :industry %>
          <%= f.select :category_id, options_from_collection_for_select(Category.all, "id", "name") %>
        </div>
        
        <div class="form-group">
          <%= f.label :status %><br />
          <%= f.text_field :status, autofocus: true, class: 'form-control', placeholder: 'Your current professional status or role' %>
        </div>

        <div class="form-group">
          <%= f.label :location %><br />
          <%= f.text_field :location, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :skills %><br />
          <%= f.text_area :skill, autofocus: true, class: 'form-control', rows: 4, placeholder: "Describe talents, services, and skills you can offer. What sets you apart from others?" %>
        </div>

        <div class="form-group">
          <%= f.label :achievements %><br />
          <%= f.text_area :achievement, autofocus: true, class: 'form-control', placeholder: "Give specific examples of when you've succeeded." %>
        </div>

        <div class="form-group">
          <%= f.label :portfolio %><br />
          <%= f.text_field :portfolio, autofocus: true, class: 'form-control', placeholder: "link to your portfolio site or Linked In profile" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
