- if policy(@categories).index?
  %h1.text-center.brand industries.
  -if policy(@categories).new?
    %h4.text-center= link_to "new industry", new_category_path
  - @categories.each do |category|
    .container
      .row
        .col-md-4.col-md-offset-4
          %h3.brand-small= link_to category.name, category
          - if policy(category).destroy?
            .small= link_to 'Delete', category, :method => :delete, :data => { :confirm => 'Are you sure?' }
