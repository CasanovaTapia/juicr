<!DOCTYPE html>
<html>
<head>
  <title>Juicr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- NAVBAR -->
  <div class="navbar-wrapper">
    <div class="container">
      <nav class="navbar navbar-static-top" role="navigation">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to "Juicr", root_path, class: 'navbar-brand brand-small' %>
            </div>
            <div class="navbar-collapse collapse pull-right">
              <ul class="nav navbar-nav">
                <% if current_user %>
                  <li id="user-greeting">Hello <%= current_user.first_name %>!</li>
                <% end %>
                <li class="active"><%= link_to "ask.", asks_path, class: 'brand-secondary' %></li>
                <li><%= link_to "give.", "#", class: 'brand-secondary' %></li>
                <li role="presentation" class="dropdown" id="dropdown">

                </li>
                <!-- <li role="presentation" class="dropdown" id="dropdown">
                  <div class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                      give by industry<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                      <% Category.all.each do |category| %>
                        <li role="presentation"><%= link_to category.name, category %></li>
                      <% end %>
                    </ul>
                  </div>
                </li> -->
                <li><%= link_to "About", static_about_path %></li>
                <li><%= link_to "Help", static_help_path %></li>
                <% if current_user %>
                  <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to "Sign up", new_user_registration_path %></li>
                  <li><%= link_to "Log in", new_user_session_path %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
    </div>
  </div>

  <!-- Flash messages  -->
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:error] %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:error] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Main content -->
  <div id="content" class="container-fluid">
    <%= yield %>
  </div>

  <!-- Footer -->
  <div id="footer">
    <div class="row">
      <div class="col-md-4 col-md-offset-1 pull-left">
        <%= link_to "about", static_about_path, class: 'footer-item' %>
        <%= link_to "stories", "#", class: 'footer-item' %>
        <%= link_to "help", static_help_path, class: 'footer-item' %>
      </div>
      <div class="col-md-4 col-md-offset-1 pull-right">
        <%= link_to "policies", "#", class: 'footer-item' %>
        <%= link_to "terms & privacy", "#", class: 'footer-item' %>
      </div>
    </div>
    <div class="container text-center end-footer">
      <p>Made with â™¥ in Los Angeles  |  Juicr 2014  |  <%= link_to "Casanova Tapia", "http://casanovatapia.com", id: 'credit' %></p>
    </div>
  </div>

</body>
</html>
