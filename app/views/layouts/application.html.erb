<!DOCTYPE html>
<html>
<head>
  <title>Juicr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- NAVBAR -->
  <div class="container">
    <nav class="navbar navbar-default" role="navigation">
      <div class="navbar-header">
        <ul class="nav navbar-nav">
          <li role"presentation"><%= link_to "Juicr", root_path, class: 'navbar-brand brand-small' %></li>
          <li role"presentation"><%= link_to "ask.", asks_path, class: 'brand-secondary' %></li>
          <li role"presentation"><%= link_to "give.", users_index_path, class: 'brand-secondary' %></li>
        </ul>
      </div>
        <div class="pull-right" id="user-info">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <%= link_to "Hello #{current_user.first_name} !", edit_user_registration_path, class: 'nav-link' %>
              <%= link_to "My Asks", static_asks_path, class: 'nav-link' %>
            <% end %>
            <%= link_to "About", static_about_path, class: 'nav-link' %>
            <%= link_to "Help", static_help_path, class: 'nav-link' %>
            <% if current_user %>
              <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-nav btn-sm' do %>
                <span class="glyphicon glyphicon-log-out"></span>
              <% end %>
            <% else %>
              <%= link_to "Sign up", new_user_registration_path, class: 'nav-link' %>
              <%= link_to "Log in", new_user_session_path, class: 'nav-link' %>
            <% end %>
          </ul>
        </div>
      </ul>
    </nav>
  </div>

  <!-- Flash messages  -->
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:error] %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:error] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Main content -->
  <div id="content" class="container-fluid">
    <%= yield %>
  </div>

  <!-- Footer -->
  <div id="footer">
    <div class="row">
      <div class="col-md-4 col-md-offset-1 pull-left">
        <%= link_to "about", static_about_path, class: 'footer-item' %>
        <%= link_to "stories", "#", class: 'footer-item' %>
        <%= link_to "help", static_help_path, class: 'footer-item' %>
      </div>
      <div class="col-md-4 col-md-offset-1 pull-right">
        <%= link_to "policies", "#", class: 'footer-item' %>
        <%= link_to "terms & privacy", "#", class: 'footer-item' %>
      </div>
    </div>
    <div class="container text-center end-footer">
      <p>Made with â™¥ in Los Angeles  |  Juicr 2014  |  <%= link_to "Casanova Tapia", "http://casanovatapia.com", id: 'credit' %></p>
    </div>
  </div>

</body>
</html>
